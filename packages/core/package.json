{
  "name": "@ootmm/core",
  "version": "0.0.1",
  "scripts": {
    "build": "tsx ./lib/rollup.ts",
    "start": "tsx ./lib/cli.ts",
    "start:debug": "tsx ./lib/cli.ts --debug --config config.yml",
    "test": "cross-env NODE_ENV=test jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ootmm/data": "^0.0.1",
    "core-js": "^3.35.0",
    "crc-32": "^1.2.2",
    "lodash": "^4.17.21",
    "pngjs": "^7.0.0",
    "randombytes": "^2.1.0",
    "yaz0": "^2.0.5"
  },
  "main": "dist/index.node.min.js",
  "types": "dist/lib/combo/index.d.ts",
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/lodash": "^4.14.202",
    "@types/pngjs": "^6.0.4",
    "@types/randombytes": "^2.0.3",
    "@types/webpack-env": "^1.18.4",
    "cross-env": "^7.0.3",
    "csv": "^6.3.6",
    "glob": "^10.3.10",
    "rollup": "^4.9.2",
    "rollup-plugin-node-externals": "^6.1.2",
    "type-fest": "^4.9.0",
    "yaml": "^2.3.4"
  },
  "files": [
    "dist/data"
  ],
  "license": "MIT",
  "private": "true",
  "nx": {
    "namedInputs": {
      "default": [
        "{projectRoot}/**/*"
      ],
      "version": [
        {
          "env": "VERSION"
        }
      ]
    },
    "targets": {
      "build": {
        "inputs": [
          "default",
          "version"
        ],
        "outputs": [
          "{workspaceRoot}/build",
          "{workspaceRoot}/dist",
          "{workspaceRoot}/include/combo/custom.h"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "test": {
        "inputs": [
          "default"
        ],
        "outputs": [],
        "dependsOn": [
          "^build"
        ]
      },
      "start": {
        "dependsOn": [
          "^build"
        ]
      },
      "start:debug": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  }
}
