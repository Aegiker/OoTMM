<?xml version="1.0" encoding="UTF-8"?>
<dungeon name="Fire" desc="Fire Temple">
  <scene id="04">
    <room name="FireTemple_Entrance">
      <link to="FireTemple_AntiChamber"/>
      <link to="FireTemple_LavaPool" flags="locked"/>
      <!-- <link to="FireTemple_BossKeyPath" cond="has(HAMMER)" flags="locked"/> locked in vanilla -->
      <link to="FireTemple_BossKeyPath" cond="has(HAMMER)"/>
    </room>
    <room name="FireTemple_AntiChamber">
      <chest id="01" content="SMALL_KEY" desc="Antichamber Jail"/>
    </room>
    <room name="FireTemple_LavaPool">
      <link to="FireTemple_LavaPool_Jail1"/>
      <link to="FireTemple_LavaPool_Jail2"/>
      <link to="FireTemple_Secret1" cond="can_play(SONG_TIME)"/>
      <link to="FireTemple_Elevator" flags="locked"/>
    </room>
    <room name="FireTemple_LavaPool_Jail1">
      <chest id="04" content="SMALL_KEY" desc="Lava Pool Jail 1"/>
    </room>
    <room name="FireTemple_LavaPool_Jail2">
      <chest id="02" content="SMALL_KEY" desc="Lava Pool Jail 2"/>
    </room>
    <room name="FireTemple_Secret1">
    </room>
    <room name="FireTemple_Elevator">
      <link to="FireTemple_VerticalFire" flags="locked"/>
    </room>
    <room name="FireTemple_VerticalFire">
      <link to="FireTemple_Maze" cond="has(BOW) or has(HOOKSHOT) or has_explosives"/>
    </room>
    <room name="FireTemple_Maze">
      <link to="FireTemple_MazeJail"/>
      <link to="FireTemple_PitMiddle" flags="locked"/>
      <chest id="03" content="SMALL_KEY" desc="Maze"/>
    </room>
    <room name="FireTemple_MazeJail">
      <chest id="08" content="SMALL_KEY" desc="Maze Jail"/>
    </room>
    <room name="FireTemple_PitMiddle">
      <link to="FireTemple_PitLavaRight_Cage" cond="has(BOW)"/>
      <link to="FireTemple_PitLavaRight" flags="locked"/>
    </room>
    <room name="FireTemple_PitLavaRight_Cage">
      <chest id="0a" content="MAP" desc="Map"/>
    </room>
    <room name="FireTemple_PitLavaRight">
      <link to="FireTemple_MazeTop"/>
      <link to="FireTemple_Corridor" flags="locked"/>
    </room>
    <room name="FireTemple_MazeTop">
      <link to="FireTemple_MazeGrid" cond="has_explosives_or_hammer"/>
      <chest id="06" content="SMALL_KEY" desc="Above Maze"/>
    </room>
    <room name="FireTemple_MazeGrid">
      <!-- <chest id="0b" content="SMALL_KEY"/> Small key in vanilla -->
      <chest id="0b" content="RUPEE_RED" desc="Below Maze"/>
    </room>
    <room name="FireTemple_Corridor">
      <link to="FireTemple_RingLeft"/>
    </room>
    <room name="FireTemple_RingLeft">
      <link to="FireTemple_RingCenter" flags="locked"/>
    </room>
    <room name="FireTemple_RingCenter">
      <link to="FireTemple_RingRight" cond="can_play(SONG_TIME)"/>
    </room>
    <room name="FireTemple_RingRight">
      <link to="FireTemple_MiniBoss1" cond="has_explosives_or_hammer"/>
      <link to="FireTemple_RingRight_Jail"/>
    </room>
    <room name="FireTemple_RingRight_Jail">
      <chest id="07" content="COMPASS" desc="Compass"/>
    </room>
    <room name="FireTemple_MiniBoss1">
      <link to="FireTemple_MiniBoss1_Top" cond="has_explosives and has(HOOKSHOT)"/>
    </room>
    <room name="FireTemple_MiniBoss1_Top">
      <link to="FireTemple_Hammer_AntiChamber"/>
    </room>
    <room name="FireTemple_Hammer_AntiChamber">
      <link to="FireTemple_Hammer" cond="has_explosives or has(HOOKSHOT)"/>
    </room>
    <room name="FireTemple_Hammer">
      <link to="FireTemple_UnderHammer" cond="has(HAMMER)"/>
      <chest id="05" content="HAMMER" desc="Hammer"/>
    </room>
    <room name="FireTemple_UnderHammer">
      <link to="FireTemple_RingLeft_Top" cond="has(HAMMER)"/>
    </room>
    <room name="FireTemple_RingLeft_Top">
      <!-- Fake link for logic -->
      <link to="FireTemple_Boss" cond="has(HAMMER)" flags="locked-boss"/>
      <link to="FireTemple_RingCenter_Top" cond="has(HAMMER)"/>
    </room>
    <room name="FireTemple_RingCenter_Top">
      <chest id="09" content="SMALL_KEY" desc="Ring Center Jail"/>
    </room>
    <room name="FireTemple_BossKeyPath">
      <link to="FireTemple_BossKeyPath2"/>
    </room>
    <room name="FireTemple_BossKeyPath2">
      <link to="FireTemple_BossKeyPath3"/>
    </room>
    <room name="FireTemple_BossKeyPath3">
      <chest id="00" content="BOMBS_10" cond="has_explosives and has(HOOKSHOT)" desc="Before Boss Key"/>
      <link to="FireTemple_BossKey" cond="has_explosives and has(HOOKSHOT)"/>
    </room>
    <room name="FireTemple_BossKey">
      <chest id="0c" content="BOSS_KEY" cond="has(HAMMER)" desc="Boss Key"/>
    </room>
  </scene>
  <scene id="15">
    <room name="FireTemple_Boss">
      <link to="FireTemple_PostBoss" cond="has(HAMMER)"/>
    </room>
    <room name="FireTemple_PostBoss">
      <collectible id="1f" content="HEART_CONTAINER" desc="Boss Heart Container"/>
    </room>
  </scene>
</dungeon>
